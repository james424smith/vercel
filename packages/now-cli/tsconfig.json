{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2018",
    "esModuleInterop": true,
    "lib": ["ES2018"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}

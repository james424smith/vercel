{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "zeroConfig": true }
    }
  ],
  "build": {
    "env": {
      "HUGO_VERSION": "0.58.1",
      "ZOLA_VERSION": "0.7.0",
      "GUTENBERG_VERSION": "0.4.1"
    }
  },
  "probes": [
    { "path": "/hugo.txt", "mustContain": "0.58.1" },
    { "path": "/zola.txt", "mustContain": "0.7.0" },
    { "path": "/gutenberg.txt", "mustContain": "0.4.1" }
  ]
}

{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node",
      "config": {
        "includeFiles": ["templates/**"]
      }
    },
    {
      "src": "root.js",
      "use": "@now/node",
      "config": {
        "includeFiles": ["root.edge"]
      }
    },
    {
      "src": "accepts-string.js",
      "use": "@now/node",
      "config": {
        "includeFiles": "templates/accepts-string.edge"
      }
    }
  ],
  "probes": [
    {
      "path": "/",
      "mustContain": "hello Now!"
    },
    {
      "path": "/accepts-string.js",
      "mustContain": "hello String!"
    },
    {
      "path": "/root.js",
      "mustContain": "hello Root!"
    }
  ]
}

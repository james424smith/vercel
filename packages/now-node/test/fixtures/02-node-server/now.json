{
  "version": 2,
  "builds": [{ "src": "**/*.js", "use": "@now/node" }],
  "probes": [
    { "path": "/", "mustContain": "root:RANDOMNESS_PLACEHOLDER" },
    {
      "path": "/subdirectory/",
      "mustContain": "subdir:RANDOMNESS_PLACEHOLDER"
    },
    {
      "path": "/hapi-async/",
      "mustContain": "hapi-async:RANDOMNESS_PLACEHOLDER"
    }
  ]
}
